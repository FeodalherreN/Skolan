<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/grouplistfragment"
    android:orientation="horizontal"
    android:layout_height="match_parent" tools:context="com.example.markus.app1.Grouplist">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/groupActionBar">
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/GroupTxtAddGroup"
            android:hint="Groupname..."
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add group"
            android:id="@+id/GroupAddBtn"
            android:layout_toRightOf="@+id/GroupTxtAddGroup"/>
        </RelativeLayout>


    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/grouplistview"
        android:layout_below="@+id/groupActionBar"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_weight="1" />
</RelativeLayout>
